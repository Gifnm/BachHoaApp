<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalScan">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/afs_create">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Danh sách sản phẩm hết tồn:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/afs_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_large" />


            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/afs_text1"
                android:stretchColumns="1,2,3">

                <TableRow android:background="@drawable/my_button_bg">

                    <TextView
                        android:layout_column="1"
                        android:padding="10dp"
                        android:text="Mã sản phẩm"
                        android:textAlignment="center"
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="1"
                        android:padding="10dp"
                        android:text="Tồn kệ"
                        android:textAlignment="center"
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="1"
                        android:padding="10dp"
                        android:text="Tồn hệ thống"
                        android:textAlignment="center"
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Sản phẩm có thể châm:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/afs_access"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_large" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/afs_text1"
                android:stretchColumns="1,2,3">

                <TableRow android:background="@drawable/my_button_bg">

                    <TextView
                        android:layout_column="1"
                        android:padding="10dp"
                        android:text="Mã sản phẩm"
                        android:textAlignment="center"
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="1"
                        android:padding="10dp"
                        android:text="Tồn kệ"
                        android:textAlignment="center"
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="1"
                        android:padding="10dp"
                        android:text="Cần châm"
                        android:textAlignment="center"
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Tồn sai - Cần kiểm kê:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/afs_errol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/afs_text1"
                android:stretchColumns="1,2,3,4">

                <TableRow android:background="@drawable/my_button_bg">

                    <TextView
                        android:layout_column="1"
                        android:padding="10dp"
                        android:text="Mã sản phẩm"
                        android:textAlignment="center"
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="1"
                        android:padding="10dp"
                        android:text="Tồn kệ"
                        android:textAlignment="center"
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="1"
                        android:padding="10dp"
                        android:text="Tồn hệ thống"
                        android:textAlignment="center"
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/afs_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/greenLight"
        android:text="Tạo bàn giao ca và chuyển sang soạn hàng"
        android:textColor="@color/white" />
</RelativeLayout>