<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="18dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin trưng bày"
        android:padding="8dp"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/main_color"
        android:textAlignment="center"
        />
    <LinearLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:text="Vị trí: "
            android:layout_marginRight="5dp"
            />
        <EditText
            android:id="@+id/index_product"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:padding="12dp"
            android:layout_marginRight="12dp"
            android:inputType="number"
            android:textAlignment="center"
            android:hint="0"
            android:textColor="@color/grey"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:text="Số lượng trung bày:"
            android:layout_marginRight="5dp"
            />
        <EditText
            android:id="@+id/quantity_display"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:padding="12dp"
            android:inputType="number"
            android:hint="0"
            android:textColorHint="@color/grey"

            android:textAlignment="center"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:text="Hình thức trưng bày: "
            android:layout_marginRight="5dp"
            />

        <EditText
            android:id="@+id/form"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@drawable/custom_edit_text"
            android:text="1"
            android:inputType="number"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColorHint="@color/grey" />


    </LinearLayout>

    <LinearLayout
        android:layout_margin="18dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_cancel_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textColor="@color/black"
            android:layout_marginRight="50dp"
            />
        <Button
            android:id="@+id/btn_saveIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textColor="@color/white"
            android:background="@color/main_color"
            />

    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>