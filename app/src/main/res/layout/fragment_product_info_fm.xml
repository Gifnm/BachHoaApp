<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vpo_product_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fm.ProductInfo_fm"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/vpo_shelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kệ: "
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vpo_platter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Mâm: "
            android:textColor="@color/purple_700"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vpo_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Vị trí: "
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vpo_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Trưng: "
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vpo_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="SL: "
            android:textColor="@color/purple_700"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vpo_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Tồn: "
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/vpo_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_image_24"
                >

            </ImageView>
            <Button
                android:id="@+id/vpo_print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="In tem giá"
                />
        </LinearLayout>
        <LinearLayout
             android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/vpo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/black"
                android:text="GIẤY VỆ SINH KHÔNG LÕI PURI LỐC 12 CUỘN - 2 LỚP - 23M"
                />
            <TextView
                android:id="@+id/vpo_barcode"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:text="Barcode: 89121140001228"
                />
            <TextView
                android:id="@+id/vpo_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:textColor="#3F51B5"
                android:text="KD bình thường"
                />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:id="@+id/line"
        android:layout_below="@+id/vpo_product_info"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        />
</LinearLayout>
