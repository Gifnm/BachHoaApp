<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
android:id="@+id/ip_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center|start"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="Kệ: "
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/ip_shelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="Vị trí: "
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/ip_locaion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="Trưng: "
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/ip_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"

            android:layout_marginRight="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textSize="@dimen/text_size_large"
            android:text="SL:"
            android:textStyle="bold"

            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/ip_quanity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:layout_marginRight="8dp"

            />
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/ip_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp"
        >
        <LinearLayout
            android:id="@+id/ip_img_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/ip_img"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_baseline_image_24"
                ></ImageView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In tem giá"
                ></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ip_img_print"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ip_name_of_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Tên sản phẩm"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_large"


                />

            <TextView
                android:id="@+id/ip_barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Barcode:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"


                />

            <Button
                android:id="@+id/ip_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:text="Xóa" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
</androidx.cardview.widget.CardView>