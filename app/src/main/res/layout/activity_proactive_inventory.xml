<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProactiveInventoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:id="@+id/apri_img"
            android:src="@drawable/ic_baseline_image_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/apri_name_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1709000198 - Bia Larue Lager Special lon 320"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/apri_shelf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Kệ: 46"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/apri_platter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Mâm: 2"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/apri_possiton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Vị trí: 1"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Số lượng tồn"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/apri_exist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="176"
                    android:textSize="@dimen/text_size_medium" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/api_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Tổng kiểm"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/api_sum"
            android:gravity="right"
            android:text="barcode"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/background"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/api_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:hint="Nhập số lượng"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:id="@+id/api_plus1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/api_number1"
            android:background="@drawable/custom_edit_text"
            android:src="@drawable/plus_svgrepo_com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="12dp"
            android:text="(1)"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/api_barcode"
            android:layout_marginRight="4dp"
            android:gravity="right"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="1063021000015"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/background"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/api_number10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:hint="Nhập số lượng"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:id="@+id/api_plus10"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/api_number10"
            android:background="@drawable/custom_edit_text"
            android:src="@drawable/plus_svgrepo_com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="12dp"
            android:text="(10)"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"

            />


    </RelativeLayout>

    <EditText
        android:id="@+id/edit_note"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:background="@drawable/custom_edit_text"
        android:gravity="top"
        android:hint="Nhập ghi chú"
        android:inputType="text|textMultiLine"
        android:padding="8dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/api_save"
        android:layout_margin="12dp"
        android:background="@color/main_color"
        android:text="Đống ý"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</LinearLayout>