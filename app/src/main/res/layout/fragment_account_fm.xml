<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".viewPagerAdapter.acount_fm"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/faf_store_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/button2"
        app:cardCornerRadius="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cửa hàng: 4594"
            android:layout_margin="20dp"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/textColor2"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_below="@+id/faf_store_id"
    android:layout_above="@+id/faf_logout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/button2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuyễn Minh Thư - 179692"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:padding="12dp"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginBottom="5dp"
        ></View>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết ca thu ngân cửa hàng"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:padding="12dp"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liên hệ hỗ trợ"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:padding="12dp"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>
    <Button
        android:id="@+id/faf_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Đăng xuất"
        android:background="@color/delete"
        android:textColor="@color/red"
        android:drawableTop="@drawable/logout_svgrepo_com"
        />
</RelativeLayout>