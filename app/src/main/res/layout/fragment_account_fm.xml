<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".viewPagerAdapter.acount_fm"
    android:background="@color/white"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:background="@drawable/card_border_radius"
       android:gravity="center"
       >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >
           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:src="@drawable/me"
               ></de.hdodenhof.circleimageview.CircleImageView>
          <LinearLayout
              android:layout_marginLeft="12dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Cửa hàng: 4496"
                  android:textColor="@color/white"
                  android:textSize="@dimen/text_size_medium"

                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:background="@color/white"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Nhân viên: Nguyễn Minh Thư"
                  android:textColor="@color/white"
                  android:textSize="@dimen/text_size_medium"

                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:background="@color/white"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="User: 179698"
                  android:textColor="@color/white"
                  android:textSize="@dimen/text_size_medium"
                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:background="@color/white"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Vai trò: Quản lý"
                  android:textColor="@color/white"
                  android:textSize="@dimen/text_size_medium"
                  />

          </LinearLayout>

       </LinearLayout>

   </LinearLayout>

<LinearLayout
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/account_detail"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:text="Thông tin tài khoản"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/main_color"
            android:background="@color/white"
            ></TextView>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:text="Chấm công"
            android:drawableLeft="@drawable/ic_baseline_punch_clock_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/main_color"
            android:background="@color/white"
            ></TextView>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:text="Lịch phân ca cá nhân"
            android:drawableLeft="@drawable/ic_baseline_person_pin_circle_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/main_color"
            android:background="@color/white"
            ></TextView>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:text="Phân ca cửa hàng"
            android:drawableLeft="@drawable/ic_baseline_storefront_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/main_color"
            android:background="@color/white"
            ></TextView>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:text="Quản lý phân ca"
            android:drawableLeft="@drawable/ic_baseline_manage_accounts_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/main_color"
            android:background="@color/white"
            ></TextView>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:text="Đăng xuất"
            android:drawableLeft="@drawable/ic_baseline_logout_24"
            android:drawablePadding="16dp"
            android:drawableTint="@color/main_color"
            android:background="@color/white"
            ></TextView>
    </androidx.cardview.widget.CardView>


</LinearLayout>
</LinearLayout>